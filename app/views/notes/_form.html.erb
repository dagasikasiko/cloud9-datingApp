<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @note.errors.count %>件のエラーがあります。</h2>

      <ul>
        <% @note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!--ユーザーID-->
  <!--%= f.collection_select :user_id, User.all, :id, :id, {prompt: true}, {class: "form-control user-id-field"} %>-->
  <!--タイトル-->
  <!--%= f.text_field :title, { class: "form-control title-field" } %>-->
  <%= f.hidden_field :title, :value => current_user.id %>

  <%= f.text_area :content, { class: "form-control content-field" } %>
  <%= f.submit "ポエる", { class: "btn primary-btn" } %>
<% end %>
