<h1>新規投稿する</h1>

<% if @note.errors.any? %>
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3><%= @note.errors.count %>件のエラーがあります。</h3>
    </div>
    <div class="panel-body">
      <ul>
        <% @note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= render 'form' %>
