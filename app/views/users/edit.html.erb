        </div>
      </section>
    
      <section>
        <span class="label">メールアドレス</span>
        <div class="field">
        <h3><%= f.text_field :email %></h3>
          </div>
      </section>
      
       <div class="actions">
     <center><%= f.submit %>
  </div>
<% end %>

      
      
