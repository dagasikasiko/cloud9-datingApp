<h1 class="heading">ユーザー一覧</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th></th>
      <th>ユーザ名</th>
      <th>メールアドレス</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if user.image? %> 
          <td><%= image_tag user.image.url,:size => "100x100" %></td>
        <% else %>
          <td><%= image_tag "icon.png", :size => "100x100" %></td>
        <% end %>
        <td><%= link_to user.name, "/admin/users/#{user.id}",:id => user.id%></td>
        <td><%= user.email %></td>
        <td><%= link_to '編集', "/admin/users/#{user.id}/edit" %></td>
        <%if current_user.id != user.id  %>
        <td><%= link_to '削除', [:admin,user], method: :delete, data: { confirm: '削除します。よろしいですか？' } %></td>
        <%else%>
        <td>けさせねぇよ</td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>


