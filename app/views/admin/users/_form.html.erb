<%= form_for([:admin, @user]) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    名前
    <%= f.text_field :name %>
  </div>

  <div class="field">
    email
    <%= f.text_field :email %>
  </div>
  
  <!-- 追加箇所 開始 -->
  <div class="field">

    <% if @user.image? %>
      <div class="thumbnail">
        <%= image_tag user.image.url %>
      </div>
    <% end %><br>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <!--%= f.hidden_field :image_cache %>-->
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
