<h3>この人の友達</h3>
<%  if @frid.size == 0 %>
<p>友達はいません</p>
<% else %>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>ID</th>
      <th>イメージ</th>
      <th>ユーザ名</th>
      <th>性別</th>
    </tr>
  </thead>

  <tbody>
  <tbody>
    <% @frid.each do |frid| %>
      <% @frienduser.each do |frienduser| %>
        <tr>
          <% if frienduser.id == frid.friendid%>
          <td>
            <p><%= frienduser.id%></p>
          </td>
          <td>
            <% if frienduser.image? %> 
              <%= image_tag frienduser.image.url,:size => "100x100" %>
            <% else %>
              <%= image_tag "/assets/icon.png",:size => "100x100" %>
            <% end %>
          </td>
          <td>
            <p><%= frienduser.name%></p>
          </td>
          <td>
            <% if frienduser.sex == 1  %>
            <p>男</p>
            <%elsif  frienduser.sex == 0%>
            <p>？</p>
            <% else %>
            <p>女</p>
            <% end%>
          </td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
<%end%>
</table>