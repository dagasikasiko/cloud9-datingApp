    <script>
			$(function() {
			  $(document).snowfall({
			      flakeCount : 50,//雪の量を指定
            minSize  : 2,    // 雪の最小サイズ
            maxSize  : 30,    // 雪の最大サイズ
            minSpeed : 1,    // 雪の最低速度
            maxSpeed : 5,    // 雪の最高速度 元は1,5,1,8
            round    : true, // 雪の形を丸くする
            shadow   : false, // 雪に影をつける
            flakeColor : "#f00", // 雪の色を指定
            // collection : '.yuki',//積もらせる要素を指定
            // image : "/assets/iinooo.gif"// オリジナル画像を使用する場合
            image : "/assets/favicon.ico"
          }); 
			});
		</script>
